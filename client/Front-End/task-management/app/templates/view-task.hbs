{{page-title "ViewTask"}}
<div class="container">
  <label class="label-style">View Task</label>
  <form {{on "submit" this.viewTask}}>
    <label for="taskTitle" class="input-style">Enter Task Title:</label>
    <input type="text" id="taskTitle" {{on "input" this.updateTaskTitle}} value={{this.taskTitle}}  />
    <button type="submit" class="nice-button">View Task</button>
  </form>

  {{#if this.showTaskAttributes}}
    <h3>Task Details</h3>
    <ul>
      <li class="input-style"><strong>ID : </strong> {{this.taskAttributes.id}}</li>
      <li class="input-style"><strong>Title : </strong> {{this.taskAttributes.title}}</li>
      <li class="input-style"><strong>Description : </strong> {{this.taskAttributes.description}}</li>
      <li class="input-style"><strong>Status : </strong> {{this.taskAttributes.status}}</li>
      <li class="input-style"><strong>Due Date : </strong> {{this.taskAttributes.dueDate}}</li>
      <li class="input-style"><strong>Author ID : </strong> {{this.taskAttributes.authorId}}</li>
    </ul>
  {{/if}}
  {{#if this.message}}
    <p class={{if this.isSuccessful "success" "failure"}}>
      {{this.message}}
    </p> 
  {{/if}}

  <br>
  <button class="nice-button label-style" type="button" {{on "click" this.goBack}}>Back to Task Management Portal</button>
  </div>
{{outlet}}
