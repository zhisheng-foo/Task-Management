<h1>Delete Task</h1>

<form {{on "submit" this.deleteTask}}>
    <label for="taskName">Task Name:</label>
    <input type="text" id="taskName" value={{this.taskName}} {{on "input" this.updateTaskName}} />

    <button type="submit">Delete Task</button>
    <br>
    {{#if this.message}}
    <p class={{if this.successful "success" "failure"}}> {{this.message}} </p> 
    {{/if}}
    <br>
   
</form>

<LinkTo @route="tasks" class="nice-button">Return to task</LinkTo>



{{outlet}}


